root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{md,yml,yaml}]
trim_trailing_whitespace = false

[*.{js,ts,jsx,tsx,json}]
indent_size = 2

[*.{html,css,scss,sass}]
indent_size = 2

[*.py]
indent_size = 4

[Makefile]
indent_style = tab
