# MFX Host Environment Variables

# Microfrontend URLs
MF_ANGULAR_URL=http://localhost:3001
MF_SVELTE_URL=http://localhost:3002

# API Configuration
REACT_APP_API_URL=https://api.example.com
REACT_APP_API_TIMEOUT=10000

# Authentication
REACT_APP_AUTH_ENABLED=true
REACT_APP_LOGIN_URL=/auth/login
REACT_APP_LOGOUT_URL=/auth/logout

# Internationalization
REACT_APP_I18N_ENABLED=true
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,es,fr

# Development
NODE_ENV=development
REACT_APP_DEBUG=true
