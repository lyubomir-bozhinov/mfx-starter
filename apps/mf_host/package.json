{
  "name": "mf_host",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "rsbuild dev --open",
    "build": "cross-env env-cmd -f .env rsbuild build",
    "preview": "rsbuild preview",
    "preview:host": "npm run preview -- --host host-react.mfx.com --port=3000",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write --ignore-unknown src/**/*.{ts,tsx,js,jsx,json,css,scss,md} || true",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@mfx/shared-utils": "^1.0.0",
    "@mfx/ui-components": "^1.0.0",
    "@module-federation/enhanced": "^0.16.0",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.6.0",
    "react-router-dom": "^7.6.3",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@module-federation/rsbuild-plugin": "^0.16.0",
    "@rsbuild/core": "^1.4.5",
    "@rsbuild/plugin-image-compress": "^1.2.0",
    "@rsbuild/plugin-react": "^1.3.4",
    "@rsbuild/plugin-sass": "^1.3.3",
    "@rsbuild/plugin-svgr": "^1.2.1",
    "@rsbuild/plugin-type-check": "^1.2.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.6.2",
    "sass": "^1.89.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
